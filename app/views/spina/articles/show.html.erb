<div id="article" class="card-panel">
  <div class="article-header">
    <h4><%= @article.title %></h4>

    <span>
      <small>
        <i>
        <% if @article.author %>
          Được đăng bởi <%= @article.author %> vào lúc 
        <% end %>
        <%= @article.created_at.strftime("%d-%m-%Y") %>
        </i>
      </small>
    </span>
  </div>

  <div class="article-body">
    <%= @article.body.try(:html_safe) %>
  
    <div class="article-nav">
      <div class="prev-article left">
        <% if @prev_article %>
          <%= link_to "Tin trước đó", @prev_article.materialized_path %>
        <% end %>
      </div>
      <div class="next-article right">
        <% if @next_article %>
          <%= link_to "Tin tiếp theo", @next_article.materialized_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
