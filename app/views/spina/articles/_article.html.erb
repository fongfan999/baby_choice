<article class="timeline-entry">
  <div class="timeline-entry-inner">
    <div class="timeline-icon bg-info">
      <i class="entypo-feather"></i>
    </div>

    <div class="timeline-label card-panel">
      <%= link_to article.materialized_path do %>
        <h2>
          <%= article.title %>
          <br/>
          <span>
            <small>
              <i>
              <% if article.author %>
                Được đăng bởi <%= article.author %> vào 
              <% end %>
              <%= article.created_at.strftime("%d-%m-%Y") %>
              </i>
            </small>
          </span>
        </h2>

        <p class="teaser">
          <%= article.teaser %>
        </p>
      <% end %>
    </div>
  </div>
</article>