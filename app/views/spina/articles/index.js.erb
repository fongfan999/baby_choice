<% if params[:q] %>
  $('.infinite-root').before("<%= j render(partial: 'spina/articles/second_article', collection: @articles, as: :article) %>");
<% else %>
  $('.infinite-root').before("<%= j render(@articles) %>");
<% end %>

$('.infinite-root .preloader').toggleClass('hide');

<% if @articles.next_page %>
  // Replace with new will_page
  $('.will-paginate').html('<%= j will_paginate @articles %>');
<% else %>
  $('.will-paginate').remove();
<% end %>